        function loadData() {

            $.ajax({
                url: "https://localhost:44323/api/Todo/GetTodos",
                type: "GET",
                crossDomain: true,
                dataType: "json",
                success: function (data) {
                    $("tbody").html("");
                    $.each(data, function (key, item) {

                        var d = new Date(item.addDate)
                        var adate = d.toLocaleDateString();
                        console.log(adate);

                        var d2 = new Date(item.updateDate)
                        if (item.updateDate == null) {
                            var udate = "";
                        }
                        else {
                            var udate = d2.toLocaleDateString();
                        }


                        $("tbody").append(`
                    <tr id="`+ item.id + `">
                        <td>`+ item.id + `</td>
                        <td>`+ item.name + `</td>
                        <td>`+ adate + `</td>
                        <td>`+ udate + `</td>
                        <td>
            <button id="`+ item.id + `" class="btn btn-danger delete" type="submit">Delete</button>
          <button id="`+ item.id + `" onclick="Edit(` + item.id + `) "class="btn btn-danger edit" type="button" data-toggle="modal" data-target="#myModal">Edit</button>

                        </td>


                    </tr>
                    `)
                    });
                },
                error: function (xhr, status, error) {
                    alert("Hata : " + error);
                }
            });
        }



        $(document).on("click", ".delete", function () {
            let id = $(this).attr("id");
            $.ajax({
                url: "/api/Todo/Delete/",
                type: "POST",
                data: { id: id },
                success: function (msg) {
                    $("#" + id).fadeOut();


                    alert("Deleted");
                },
                error: function (err) {
                    alert("Failed")
                }
            })
        });


        function Add() {

            var obj = {
                name: $('#Name').val(),
            };
            $.ajax({
                type: "POST",
                url: 'https://localhost:44323/api/Todo/AddTodo',
                contentType: "application/json;charset=utf-8",
                data: JSON.stringify(obj),
                success: function (result) {
                    console.log(result)

                    if (result) {
                        loadData();
                        $('#myModal').modal('hide');
                        $('#Name').val("");

                    }
                    alert("Successfully Added!");
                },
                error: function (errormessage) {
                    alert("Failed!");
                }
            });
        }

        function HideKey() {
            $("#myModalLabel").text("Add Todo");
            $('#ID').val("");
            $('#Name').val("");
            $('#btnUpdate').hide();
            $('#btnAdd').show();


            $('#myModal').modal('hide');
        }






        function Edit(id) {
            console.log(id);
            $("#myModalLabel").text("Edit Todo");
            $('#myModal').modal('show')
            console.log(id);
            $('#Name').css('border-color', 'lightgrey');
            console.log(id);
            $.ajax({
                url: 'https://localhost:44323/api/Todo/GetTodos?id=' + id,

                type: "GET",
                contentType: "application/json;charset=UTF-8",

                dataType: "json",
                success: function (result) {
                    console.log(result)

                    if (result.length > 0) {
                        $.each(result, function (key, item) {
                            if (item.id == id) {
                                $('#ID').val(item.id);
                                $('#Name').val(item.name);
                            }
                        });

                        $('#myModal').modal('show');
                        $('#btnUpdate').show();
                        $('#btnAdd').hide();
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
            return false;
        };



        function Update() {

            var obj = {
                id: parseInt($('#ID').val()),
                name: $('#Name').val(),
            };
